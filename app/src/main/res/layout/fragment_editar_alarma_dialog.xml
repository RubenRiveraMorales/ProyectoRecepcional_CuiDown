<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarAlarmaDialog">


    <Spinner
        android:id="@+id/spActividad"
        android:layout_width="279dp"
        android:layout_height="47dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:popupBackground="@color/purple"
        android:entries="@array/actividades"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:theme="@style/MySpinnerTheme"/>

    <EditText
        android:id="@+id/edHora"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:text="Seleccionar hora"
        android:backgroundTint="@color/black"
        android:textColor="@color/purple"
        android:clickable="false"
        android:focusable="false"
        android:inputType="time" />

    <CheckBox
        android:id="@+id/cbLunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        android:text="Lun" />
    <CheckBox
        android:id="@+id/cbMartes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="120dp"
        android:textColor="@color/black"
        android:text="Mar" />
    <CheckBox
        android:id="@+id/cbMiercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="220dp"
        android:textColor="@color/black"
        android:text="Mier" />

    <CheckBox
        android:id="@+id/cbJueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="180dp"
        android:textColor="@color/black"
        android:text="Jue" />

    <CheckBox
        android:id="@+id/cbViernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        android:text="Vier" />

    <CheckBox
        android:id="@+id/cbSabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        android:text="Sab" />

    <CheckBox
        android:id="@+id/cbDomingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        android:text="Dom" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="150dp"
        android:text="Seleccionar dias"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <Switch
        android:id="@+id/swActivar"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="280dp"
        android:textColor="@color/black"
        android:text="Encender/Apargar"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginStart="25dp"
        android:text="Aceptar" />

    <ImageView
        android:id="@+id/ivEliminar"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="275dp"
        android:src="@drawable/baseline_delete_outline" />


</FrameLayout>